{
    "info": {
        "name": "Pomki Backend API",
        "description": "포모도로 기법 + AI 기반 학습 플랫폼 API 테스트 컬렉션",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "1.0.0"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080/api",
            "type": "string"
        },
        {
            "key": "accessToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Authentication",
            "item": [
                {
                    "name": "회원가입",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"nickname\": \"테스트유저\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/signup",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "signup"]
                        }
                    }
                },
                {
                    "name": "로그인",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "login"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('accessToken', response.accessToken);",
                                    "}"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "2. Notes Management",
            "item": [
                {
                    "name": "노트 생성",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"noteTitle\": \"Java 학습 노트\",\n  \"noteContent\": \"오늘은 Spring Boot에 대해 학습했다.\\n\\n주요 내용:\\n- Spring Boot 자동 설정\\n- REST API 개발\\n- JPA 연동\\n\\n내일은 테스트 코드 작성에 대해 공부할 예정이다.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/notes",
                            "host": ["{{baseUrl}}"],
                            "path": ["notes"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('noteId', response.noteId);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "노트 목록 조회",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/notes?page=0&size=10",
                            "host": ["{{baseUrl}}"],
                            "path": ["notes"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "0"
                                },
                                {
                                    "key": "size",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "노트 상세 조회",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/notes/{{noteId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["notes", "{{noteId}}"]
                        }
                    }
                },
                {
                    "name": "노트 수정",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"noteTitle\": \"Java 학습 노트 (수정됨)\",\n  \"noteContent\": \"오늘은 Spring Boot에 대해 학습했다.\\n\\n주요 내용:\\n- Spring Boot 자동 설정\\n- REST API 개발\\n- JPA 연동\\n- 테스트 코드 작성\\n\\n추가 학습 내용:\\n- Mockito를 이용한 단위 테스트\\n- Spring Boot Test 어노테이션\\n\\n내일은 보안 설정에 대해 공부할 예정이다.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/notes/{{noteId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["notes", "{{noteId}}"]
                        }
                    }
                },
                {
                    "name": "노트 삭제",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/notes/{{noteId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["notes", "{{noteId}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "3. AI Functions",
            "item": [
                {
                    "name": "AI 상태 확인",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/ai/status",
                            "host": ["{{baseUrl}}"],
                            "path": ["ai", "status"]
                        }
                    }
                },
                {
                    "name": "노트 AI 폴리싱",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"noteId\": \"{{noteId}}\",\n  \"style\": \"summary\",\n  \"customPrompt\": \"\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/ai/polish-note",
                            "host": ["{{baseUrl}}"],
                            "path": ["ai", "polish-note"]
                        }
                    }
                },
                {
                    "name": "폴리싱 결과 적용",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "AI가 정리한 노트 내용이 여기에 들어갑니다..."
                        },
                        "url": {
                            "raw": "{{baseUrl}}/ai/apply-polish/{{noteId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["ai", "apply-polish", "{{noteId}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "4. Pomodoro Timer",
            "item": [
                {
                    "name": "빠른 포모도로 시작",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/pomodoro/quick-start?duration=25&goal=Java 학습",
                            "host": ["{{baseUrl}}"],
                            "path": ["pomodoro", "quick-start"],
                            "query": [
                                {
                                    "key": "duration",
                                    "value": "25"
                                },
                                {
                                    "key": "goal",
                                    "value": "Java 학습"
                                }
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.collectionVariables.set('sessionId', response.sessionId);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "현재 세션 상태 조회",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/pomodoro/current",
                            "host": ["{{baseUrl}}"],
                            "path": ["pomodoro", "current"]
                        }
                    }
                },
                {
                    "name": "세션 노트 업데이트",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"sessionNotes\": \"오늘 학습한 내용:\\n- Spring Boot 기본 개념\\n- RESTful API 설계\\n- 데이터베이스 연동 방법\\n\\n어려웠던 점:\\n- JPA 연관관계 매핑\\n\\n내일 더 공부할 것:\\n- Spring Security 설정\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/pomodoro/sessions/{{sessionId}}/notes",
                            "host": ["{{baseUrl}}"],
                            "path": ["pomodoro", "sessions", "{{sessionId}}", "notes"]
                        }
                    }
                },
                {
                    "name": "세션 완료",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"actualDuration\": 25,\n  \"sessionNotes\": \"오늘 학습한 내용:\\n- Spring Boot 기본 개념\\n- RESTful API 설계\\n- 데이터베이스 연동 방법\\n\\n어려웠던 점:\\n- JPA 연관관계 매핑\\n\\n내일 더 공부할 것:\\n- Spring Security 설정\",\n  \"generateAiSummary\": true\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/pomodoro/sessions/{{sessionId}}/complete",
                            "host": ["{{baseUrl}}"],
                            "path": ["pomodoro", "sessions", "{{sessionId}}", "complete"]
                        }
                    }
                },
                {
                    "name": "세션에서 노트 생성",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/pomodoro/sessions/{{sessionId}}/generate-note",
                            "host": ["{{baseUrl}}"],
                            "path": ["pomodoro", "sessions", "{{sessionId}}", "generate-note"]
                        }
                    }
                },
                {
                    "name": "포모도로 통계",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/pomodoro/stats",
                            "host": ["{{baseUrl}}"],
                            "path": ["pomodoro", "stats"]
                        }
                    }
                },
                {
                    "name": "사이클 권장",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/pomodoro/cycle-suggestion",
                            "host": ["{{baseUrl}}"],
                            "path": ["pomodoro", "cycle-suggestion"]
                        }
                    }
                }
            ]
        },
        {
            "name": "5. Study Statistics",
            "item": [
                {
                    "name": "학습 통계 조회",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/simple-stats",
                            "host": ["{{baseUrl}}"],
                            "path": ["simple-stats"]
                        }
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ]
} 